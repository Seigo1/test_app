<div>
  <%= attachment_image_tag @shop, :image %>
  <p>ショップ名：<%= @shop.shop_name %></p>
  <p>説明：<%= @shop.caption %></p>
  <p>ユーザーネーム：<%= @shop.user.name %></p>
  <p>投稿日時：<%= @shop.created_at.strftime('%Y/%m/%d') %></p>
  <% if @shop.user == current_user %>
    <%= link_to "削除", shop_path(@shop), method: :delete %>
  <% end %>
</div>