<div class="card-list-container py-5">
  <% shops.each do |shop| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to shop_path(shop.id) do %>
      <%= attachment_image_tag shop, :image, class:"w-100 mx-auto lg"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag shop.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(shop_path(shop.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= shop.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= shop.caption %></p>
          <span><i class="fas fa-user"></i> By <%= shop.user.name %> ｜ </span>
          <span><%= link_to "#{shop.comments.count} コメント", shop_path(shop.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate shops %>
</div>